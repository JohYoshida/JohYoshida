<% include partials/header %>

<div class="container">
  <div class="ui segment">
    <h1>Journal</h1>
    <a class="ui blue button" href="/journal/new">Add New Entry</a>
    <div class="ui segment">
      <div class="ui three column stackable grid">
      <% entries.forEach(function(entry){ %>
        <div class="column">
          <div class="ui card">
            <div class="image dimmable">
              <img src="<%= entry.image %>">
            </div>
            <div class="content">
              <div class="header">
                <%= entry.name %>
              </div>
              <div class="text">
                <%= entry.text %>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
